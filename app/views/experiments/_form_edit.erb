<div class="form">
  <%= form_for [@experiment_proposal, @experiment] do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, size: 100 %>
    </div>
    <div>
      <%= f.label :results %>
      <%= f.text_area :result, cols: 100, rows: 10 %>
    </div>
    <div>
      <%= f.label :conclusion %>
      <%= f.text_area :conclusion, cols: 100, rows: 10 %>
    </div>
    <div>
      <%= f.label :status %>
      <%= f.select(:status, ['Open', 'In Progress', 'Closed'], {})%>
    </div>
    <div>
      <%= f.hidden_field :experiment_proposal_id, :value => @experiment_proposal.id %>
      <%= f.submit %>
    </div>
  <% end %>
</div>
