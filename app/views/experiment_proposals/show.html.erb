<div class="top-info">
  <h1><%= @experiment_proposal.title %></h1>
  <p>Proposed By: <%= @experiment_proposal.user.username %></p>
</div>

<div class="show-info">
  <div>
    <h3>Status</h3>
    <p><%= @experiment_proposal.status%></p>
  </div>
  <div>
    <h3>Summary</h3>
    <p><%= @experiment_proposal.summary%></p>
  </div>
  <div>
    <h3>Hypothesis</h3>
    <p><%= @experiment_proposal.hypothesis%></p>
  </div>
</div>

  <% if @experiment_proposal.experiments.count > 0  %>
    <div>
      <h3>Experiments</h3>
      <ul>
        <% @experiment_proposal.experiments.each do |experiment| %>
          <span><li><%= link_to experiment.title, experiment_proposal_experiment_path(@experiment_proposal, experiment) %>
          | Created By: <%= experiment.user.username %></li></span>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="buttons">
    <button class="btn btn-default"><%= link_to "Edit Proposal", edit_experiment_proposal_path %></button>
    <button class="btn btn-default"><%= link_to "Delete", experiment_proposal_path(@experiment_proposal), method: :delete, data: { confirm: 'Are you sure you want to delete this proposal?' } %></button>
    <% if @experiment_proposal.status == "Open" %>
      <button class="btn btn-default">
        <%= link_to 'Add an Experiment', new_experiment_proposal_experiment_path(@experiment_proposal) %>
      </button>
    <% end %>
  </div>
</div>
