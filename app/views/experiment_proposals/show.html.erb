<h1><%= @experiment_proposal.title %></h1>
<div>
  <p><%= link_to "Edit", edit_experiment_proposal_path %></p>
  <p><%= link_to "Delete", experiment_proposal_path(@experiment_proposal), method: :delete, data: { confirm: 'Are you sure you want to delete this proposal?' } %></p>
</div>
<div>
  <div>
    <h3>Status</h3>
    <p><%= @experiment_proposal.status%></p>
  </div>
  <div>
    <h3>Summary</h3>
    <p><%= @experiment_proposal.summary%></p>
  </div>
  <div>
    <h3>Hypothesis</h3>
    <p><%= @experiment_proposal.hypothesis%></p>
  </div>
</div>

<div>
  <%= link_to 'Test This Proposal', new_experiment_proposal_experiment_path(@experiment_proposal) %>
</div>

<div>
  <h3>Experiments</h3>

  <ul>
  <% @experiment_proposal.experiments.each do |experiment| %>
      <p><%= link_to experiment.title, experiment_proposal_experiment_path(@experiment_proposal, experiment) %></p>
  <% end %>
  </ul>
</div>
