<div>
  <ul>
    <% if @errors %>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="form">
  <%= form_for @experiment_proposal do |f| %>
    <div>
      <p><%= f.label 'Title' %></p>
      <p><%= f.text_field :title %></p>
    </div>
    <div>
      <p><%= f.label 'Summary' %></p>
      <p><%= f.text_area :summary %></p>
    </div>
    <div>
      <p><%= f.label 'Hypothesis' %></p>
      <p><%= f.text_area :hypothesis %></p>
    </div>
    <div>
      <%= f.select :status, options_for_select([['Open'], ['Closed']], selected: @experiment_proposal.status) %>
    </div>
    <div>
      <p><%= f.submit'Edit Proposal' %><p>
  </div>
  <% end %>
</div>
