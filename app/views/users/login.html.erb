<%if @errors%>
<ul>
  <%@errors.each do |error|%>
    <li><%=error%></li>
  <%end%>
</ul>
<%end%>

<%= form_tag("/users/login", method: "post") do %>
    <div class="text-center">
      <p>
        <br>
        <%= label_tag(:username, "Username:") %>
        <%= text_field_tag(:username) %>
        <br>
        <%= label_tag(:password, "Password: ") %>
        <%= password_field_tag(:password) %>
        <br>
        <%= submit_tag("Login") %>
      </p>
    </div>
<% end %>
